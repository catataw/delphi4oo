<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="propic" invoke="auto">
		<description>
			New read-only property using code
		</description>
		<author>
			Cobus Kruger
		</author>
		<point name="PropName">
			<text>
				PropertyName
			</text>
			<hint>
				Name of the property
			</hint>
		</point>
		<point name="TypeName">
			<text>
				TypeName
			</text>
			<hint>
				Data type of the property
			</hint>
		</point>
		<point name="IndexVar">
			<text>
				Index
			</text>
			<hint>
				Name of the index parameter
			</hint>
		</point>
		<point name="IndexType">
			<text>
				Integer
			</text>
			<hint>
				Data type of the index parameter
			</hint>
		</point>
		<code language="Delphi" delimiter="|"><![CDATA[property |PropName|[|IndexVar|: |IndexType|]: |TypeName| read Get|PropName|; default;
|end|]]>
		</code>
	</template>
</codetemplate>
