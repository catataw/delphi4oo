<?xml version="1.0" encoding="utf-8" ?>
<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="propff" invoke="auto">
		<description>
			New read/write property using fields
		</description>
		<author>
			Cobus Kruger
		</author>
		<point name="PropName">
			<text>
				PropertyName
			</text>
			<hint>
				Name of the property
			</hint>
		</point>
		<point name="TypeName">
			<text>
				TypeName
			</text>
			<hint>
				Data type of the property
			</hint>
		</point>
		<code language="Delphi" delimiter="|"><![CDATA[property |PropName|: |TypeName| read F|PropName| write F|PropName|;
|end|]]>
		</code>
	</template>
</codetemplate>
